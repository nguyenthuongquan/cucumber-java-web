pipeline{
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Building the Code.........."
                bat "mvn clean"
            }
        }

        stage('Test') {
            steps {
                echo "Testing the Code.........."
                bat "mvn test -Dcucumber.filter.tags='@Smoke'"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying the Project.........."
            }
        }
    }
}